<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DiceActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d4Button"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@mipmap/d4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d10Button"
        android:layout_row="0"
        android:layout_column="1"
        android:src="@mipmap/d10" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dNACButton"
        android:layout_row="0"
        android:layout_column="2"
        android:src="@mipmap/logo_NAC" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d6Button"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@mipmap/d6" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d12Button"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@mipmap/d12" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d8Button"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@mipmap/d8" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d20Button"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@mipmap/d20" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/diceAmount"
        android:layout_row="3"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/resultTextView"
        android:layout_row="3"
        android:layout_column="2"
        android:focusable="true" />

</GridLayout>


